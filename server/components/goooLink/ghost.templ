package GoooLink

import "Gooo/server/utility"
import "github.com/lithammer/shortuuid/v4"

templ Ghost(url string, text string) {
	{{ uniqueId := "ghost-link-" + shortuuid.New() }}
	<div id={ uniqueId } data-url={ url } data-text={ text }>
		<a href={ url }>
			{ text }
		</a>
	</div>
	@serverUtility.ConnectFrontend("ghostLink")
}
